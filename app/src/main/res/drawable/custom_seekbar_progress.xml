    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <size android:height="4dp"/> <!-- Adjust height -->
            <solid android:color="#CCCCCC"/> <!-- Light gray -->
        </shape>
    </item>
</layer-list>
