<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color for the score fields -->
    <solid android:color="#E0E0E0"/> <!-- Change this to your desired color -->

    <!-- Border for the score background -->
    <stroke
        android:width="1dp"
        android:color="#BDBDBD"/> <!-- Change this to your desired border color -->

    <!-- Rounded corners for the score background -->
    <corners android:radius="8dp"/>

    <!-- Padding inside the score background -->
    <padding
        android:left="4dp"
        android:right="4dp"
        android:top="4dp"
        android:bottom="4dp"/>
</shape>
