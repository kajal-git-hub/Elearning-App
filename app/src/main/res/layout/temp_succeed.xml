<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- User Section -->
        <ImageView
            android:id="@+id/imageUser"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/loaderscreen"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvYouLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="You"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/imageUser"
            app:layout_constraintTop_toBottomOf="@id/imageUser" />

        <TextView
            android:id="@+id/tvYouSubLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="(Live Test)"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@id/tvYouLabel"
            app:layout_constraintTop_toBottomOf="@id/tvYouLabel" />

        <!-- Topper Section -->
        <ImageView
            android:id="@+id/imageTopper"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="32dp"
            android:src="@drawable/ic_trophy"
            app:layout_constraintStart_toEndOf="@id/imageUser"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvTopperLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Topper"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/imageTopper"
            app:layout_constraintTop_toBottomOf="@id/imageTopper" />

        <TextView
            android:id="@+id/tvTopperSubLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="(Live Test)"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@id/tvTopperLabel"
            app:layout_constraintTop_toBottomOf="@id/tvTopperLabel" />

        <!-- Third Person Section -->
        <ImageView
            android:id="@+id/imageThirdPerson"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="32dp"
            android:src="@drawable/ic_top10"
            app:layout_constraintStart_toEndOf="@id/imageTopper"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvThirdPersonLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="3rd Person"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/imageThirdPerson"
            app:layout_constraintTop_toBottomOf="@id/imageThirdPerson" />

        <TextView
            android:id="@+id/tvThirdPersonSubLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="(Live Test)"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@id/tvThirdPersonLabel"
            app:layout_constraintTop_toBottomOf="@id/tvThirdPersonLabel" />

        <!-- Score Section -->
        <TextView
            android:id="@+id/tvScoreLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Score"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/imageUser"
            app:layout_constraintTop_toBottomOf="@id/tvYouSubLabel" />

        <TextView
            android:id="@+id/tvScoreYou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/score_background"
            android:gravity="center"
            android:padding="8dp"
            android:text="161"
            app:layout_constraintStart_toStartOf="@id/imageUser"
            app:layout_constraintTop_toBottomOf="@id/tvScoreLabel" />

        <TextView
            android:id="@+id/tvScoreTopper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/score_background"
            android:gravity="center"
            android:padding="8dp"
            android:text="161"
            app:layout_constraintStart_toStartOf="@id/imageTopper"
            app:layout_constraintTop_toTopOf="@id/tvScoreYou" />

        <TextView
            android:id="@+id/tvScoreThirdPerson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/score_background"
            android:gravity="center"
            android:padding="8dp"
            android:text="161"
            app:layout_constraintStart_toStartOf="@id/imageThirdPerson"
            app:layout_constraintTop_toTopOf="@id/tvScoreYou" />

        <!-- Correct Answers Section -->
        <TextView
            android:id="@+id/tvCorrectAnsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Correct Ans."
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/imageUser"
            app:layout_constraintTop_toBottomOf="@id/tvScoreYou" />

        <TextView
            android:id="@+id/tvCorrectAnsYou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/score_background"
            android:gravity="center"
            android:padding="8dp"
            android:text="121"
            app:layout_constraintStart_toStartOf="@id/imageUser"
            app:layout_constraintTop_toBottomOf="@id/tvCorrectAnsLabel" />

        <TextView
            android:id="@+id/tvCorrectAnsTopper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/score_background"
            android:gravity="center"
            android:padding="8dp"
            android:text="121"
            app:layout_constraintStart_toStartOf="@id/imageTopper"
            app:layout_constraintTop_toTopOf="@id/tvCorrectAnsYou" />

        <TextView
            android:id="@+id/tvCorrectAnsThirdPerson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/score_background"
            android:gravity="center"
            android:padding="8dp"
            android:text="121"
            app:layout_constraintStart_toStartOf="@id/imageThirdPerson"
            app:layout_constraintTop_toTopOf="@id/tvCorrectAnsYou" />

        <!-- Incorrect Answers Section -->
        <TextView
            android:id="@+id/tvIncorrectAnsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Incorrect Ans."
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/imageUser"
            app:layout_constraintTop_toBottomOf="@id/tvCorrectAnsYou" />

        <TextView
            android:id="@+id/tvIncorrectAnsYou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/score_background"
            android:gravity="center"
            android:padding="8dp"
            android:text="29"
            app:layout_constraintStart_toStartOf="@id/imageUser"
            app:layout_constraintTop_toBottomOf="@id/tvIncorrectAnsLabel" />

        <TextView
            android:id="@+id/tvIncorrectAnsTopper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/score_background"
            android:gravity="center"
            android:padding="8dp"
            android:text="29"
            app:layout_constraintStart_toStartOf="@id/imageTopper"
            app:layout_constraintTop_toTopOf="@id/tvIncorrectAnsYou" />

        <TextView
            android:id="@+id/tvIncorrectAnsThirdPerson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/score_background"
            android:gravity="center"
            android:padding="8dp"
            android:text="29"
            app:layout_constraintStart_toStartOf="@id/imageThirdPerson"
            app:layout_constraintTop_toTopOf="@id/tvIncorrectAnsYou" />

        <!-- Skipped Questions Section -->
        <TextView
            android:id="@+id/tvSkippedQuesLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Skipped Ques."
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/imageUser"
            app:layout_constraintTop_toBottomOf="@id/tvIncorrectAnsYou" />

        <TextView
            android:id="@+id/tvSkippedQuesYou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/score_background"
            android:gravity="center"
            android:padding="8dp"
            android:text="10"
            app:layout_constraintStart_toStartOf="@id/imageUser"
            app:layout_constraintTop_toBottomOf="@id/tvSkippedQuesLabel" />

        <TextView
            android:id="@+id/tvSkippedQuesTopper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/score_background"
            android:gravity="center"
            android:padding="8dp"
            android:text="10"
            app:layout_constraintStart_toStartOf="@id/imageTopper"
            app:layout_constraintTop_toTopOf="@id/tvSkippedQuesYou" />

        <TextView
            android:id="@+id/tvSkippedQuesThirdPerson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/score_background"
            android:gravity="center"
            android:padding="8dp"
            android:text="10"
            app:layout_constraintStart_toStartOf="@id/imageThirdPerson"
            app:layout_constraintTop_toTopOf="@id/tvSkippedQuesYou" />

        <!-- Time Taken Section -->
        <TextView
            android:id="@+id/tvTimeTakenLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Time Taken"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/imageUser"
            app:layout_constraintTop_toBottomOf="@id/tvSkippedQuesYou" />

        <TextView
            android:id="@+id/tvTimeTakenYou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/score_background"
            android:gravity="center"
            android:padding="8dp"
            android:text="01:20"
            app:layout_constraintStart_toStartOf="@id/imageUser"
            app:layout_constraintTop_toBottomOf="@id/tvTimeTakenLabel" />

        <TextView
            android:id="@+id/tvTimeTakenTopper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/score_background"
            android:gravity="center"
            android:padding="8dp"
            android:text="01:20"
            app:layout_constraintStart_toStartOf="@id/imageTopper"
            app:layout_constraintTop_toTopOf="@id/tvTimeTakenYou" />

        <TextView
            android:id="@+id/tvTimeTakenThirdPerson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/score_background"
            android:gravity="center"
            android:padding="8dp"
            android:text="01:20"
            app:layout_constraintStart_toStartOf="@id/imageThirdPerson"
            app:layout_constraintTop_toTopOf="@id/tvTimeTakenYou" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>