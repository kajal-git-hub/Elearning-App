<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bottom_sheet_background"
    tools:context=".ui.fragment.BottomsheetVideoSettingsFragment">

    <ImageView
        android:id="@+id/ig_notch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/notch"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvSettingsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textColor="#2B2829"
        android:textStyle="bold"
        android:textSize="@dimen/_16dp"
        android:fontFamily="@font/nunito"
        android:layout_marginTop="@dimen/_20dp"
        android:layout_marginHorizontal="@dimen/_16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ig_notch" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_playback_speed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16dp"
        android:layout_marginHorizontal="@dimen/_16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSettingsText">

        <ImageView
            android:id="@+id/iv_playback_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/play_speed"
            android:layout_marginVertical="@dimen/_16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_playback_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Playback Speed"
            android:textColor="#2B2829"
            android:textStyle="bold"
            android:textSize="@dimen/_14sp"
            android:fontFamily="@font/nunito"
            android:layout_marginStart="@dimen/_16dp"
            app:layout_constraintStart_toEndOf="@id/iv_playback_speed"
            app:layout_constraintTop_toTopOf="@id/iv_playback_speed"
            app:layout_constraintBottom_toBottomOf="@id/iv_playback_speed"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_SetPlaybackSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.75x"
            android:textColor="#5A5555"
            android:textStyle="bold"
            android:textSize="@dimen/_14sp"
            android:fontFamily="@font/nunito"
            android:drawablePadding="@dimen/_10dp"
            android:drawableEnd="@drawable/arrow_right_black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_video_quality"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_24dp"
        android:layout_marginHorizontal="@dimen/_16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl_playback_speed">

        <ImageView
            android:id="@+id/iv_video_quality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/video_play_black"
            android:layout_marginVertical="@dimen/_16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_video_quality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Video Quality"
            android:textColor="#2B2829"
            android:textStyle="bold"
            android:textSize="@dimen/_14sp"
            android:fontFamily="@font/nunito"
            android:layout_marginStart="@dimen/_16dp"
            app:layout_constraintStart_toEndOf="@id/iv_video_quality"
            app:layout_constraintTop_toTopOf="@id/iv_video_quality"
            app:layout_constraintBottom_toBottomOf="@id/iv_video_quality"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvSetVideoQuality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="720p"
            android:textColor="#5A5555"
            android:textStyle="bold"
            android:textSize="@dimen/_14sp"
            android:fontFamily="@font/nunito"
            android:drawablePadding="@dimen/_10dp"
            android:drawableEnd="@drawable/arrow_right_black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>