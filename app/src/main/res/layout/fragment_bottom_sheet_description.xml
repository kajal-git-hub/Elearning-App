<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.BottomSheetPersonalDetailsFragment"
    android:backgroundTint="@color/white"
    android:background="@drawable/bottom_sheet_background">

    <ImageView
        android:id="@+id/ig_notch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/notch"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/frame_1707480811__1_"
        android:layout_marginTop="@dimen/_20dp"
        android:layout_marginHorizontal="@dimen/_16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_next_step"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textColor="#2B2829"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_logo"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/nunito"
        android:layout_marginStart="@dimen/_16dp"
        android:textSize="@dimen/_16sp"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The topics covered typically include:"
        android:textColor="#726C6C"
        android:fontFamily="@font/nunito"
        android:layout_marginStart="@dimen/_16dp"
        android:layout_marginEnd="@dimen/_16dp"
        android:layout_marginTop="16dp"
        android:textSize="@dimen/_16sp"
        android:lineHeight="24dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_next_step" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_description1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="• Relations and Functions: Types of relations and functions, &amp; Inverse trigonometric functions."
        android:textColor="#726C6C"
        app:lineHeight="24dp"
        android:fontFamily="@font/nunito"
        android:lineHeight="@dimen/_20dp"
        android:textAlignment="viewStart"
        android:layout_marginStart="@dimen/_28dp"
        android:layout_marginEnd="@dimen/_16dp"
        android:layout_marginTop="8dp"
        android:textSize="@dimen/_14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_heading" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_description2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="• Algebra: Matrices, &amp; Determinants."
        android:textColor="#726C6C"
        app:lineHeight="24dp"
        android:fontFamily="@font/nunito"
        android:lineHeight="@dimen/_20dp"
        android:textAlignment="viewStart"
        android:layout_marginStart="@dimen/_28dp"
        android:layout_marginEnd="@dimen/_16dp"
        android:layout_marginTop="8dp"
        android:textSize="@dimen/_14sp"
        android:layout_marginBottom="68dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_description1" />

</androidx.constraintlayout.widget.ConstraintLayout>
