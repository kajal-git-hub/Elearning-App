<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFF2FB"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="4dp"
        android:background="@color/white"
        app:navigationIcon="@drawable/frame_370000069"
        app:menu="@menu/top_app_bar_menu"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/topAppBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clCourseBanner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/promo_banner">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvFY_Course"
                            android:textSize="14sp"
                            android:text="Full-Year Courses"
                            android:layout_marginTop="24dp"
                            android:layout_marginStart="16dp"
                            android:fontFamily="@font/nunito"
                            android:textColor="@color/white"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tvBatchName"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Pratham Star \nBatches - IIT JEE"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:fontFamily="@font/nunito"
                            android:layout_marginTop="12dp"
                            android:layout_marginStart="16dp"
                            android:textSize="20sp"
                            app:layout_constraintTop_toBottomOf="@id/tvFY_Course"
                            app:layout_constraintStart_toStartOf="parent"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tvBatchStartDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="New batch: Dec 6, 2022"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:fontFamily="@font/nunito"
                            android:drawablePadding="6dp"
                            android:drawableStart="@drawable/group"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="16dp"
                            android:textSize="14sp"
                            app:layout_constraintTop_toBottomOf="@id/tvBatchName"
                            app:layout_constraintStart_toStartOf="parent"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/image_course_banner"
                            android:layout_marginTop="53dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="8dp"
                            android:layout_marginTop="24dp"
                            android:layout_marginStart="16dp"
                            android:backgroundTint="#FFFFFF"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvBatchStartDate">
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Explore"
                                    android:textColor="#3C45CD"
                                    android:textSize="16sp"
                                    android:layout_marginHorizontal="16dp"
                                    android:layout_marginVertical="8dp"
                                    android:fontFamily="@font/nunito"
                                    android:drawablePadding="10dp"
                                    android:drawableEnd="@drawable/arrow_right"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"/>
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </androidx.cardview.widget.CardView>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clOurCourses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="28dp"
                app:layout_constraintTop_toBottomOf="@+id/clCourseBanner"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="#DFF2FB">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvOurCourse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Our Courses"
                    android:fontFamily="@font/nunito"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#2B2829"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clFYCourse"
                    android:layout_width="160dp"
                    android:layout_height="108dp"
                    android:layout_marginTop="16dp"
                    android:clickable="true"
                    android:focusableInTouchMode="true"
                    android:contextClickable="true"
                    android:background="@drawable/frame_1707480071"
                    android:focusable="true"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvOurCourse">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvFYCourse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Full - Year \nCourses"
                        android:textColor="#0A0A0B"
                        android:textSize="14sp"
                        app:fontFamily="@font/nunito"
                        android:layout_marginTop="32dp"
                        android:layout_marginStart="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clTestSeries"
                    android:layout_width="160dp"
                    android:layout_height="108dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/frame_1707480073"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvOurCourse">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvTestSeries"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Test \nSeries"
                        android:textColor="#0A0A0B"
                        android:textSize="14sp"
                        app:fontFamily="@font/nunito"
                        android:layout_marginTop="32dp"
                        android:layout_marginStart="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clRevisionCourses"
                    android:layout_width="160dp"
                    android:layout_height="108dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/frame_1707480073__1_"
