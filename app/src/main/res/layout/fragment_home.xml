                            app:layout_constraintEnd_toStartOf="@+id/clPYP"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/clYLectures">

                            <ImageView
                                android:id="@+id/OTSeriesIcon"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_marginVertical="12dp"
                                android:layout_marginStart="12dp"
                                android:src="@drawable/notes_4012439_1"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tvOTSeries"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="12dp"
                                android:layout_marginStart="12dp"
                                android:layout_marginEnd="42dp"
                                android:text="Open Test \nSeries"
                                android:textColor="#0A0A0B"
                                android:textSize="14sp"
                                app:fontFamily="@font/nunito"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@id/OTSeriesIcon"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/clPYP"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10dp"
                            android:layout_marginTop="12dp"
                            android:visibility="gone"
                            android:background="@drawable/card_bg"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/clOTSeries"
                            app:layout_constraintTop_toBottomOf="@id/clStudyMaterial">

                            <ImageView
                                android:id="@+id/PYPIcon"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_marginVertical="12dp"
                                android:layout_marginStart="12dp"
                                android:src="@drawable/video_chat_1310413_1"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tvPYP"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="12dp"
                                android:layout_marginStart="12dp"
