    <data>
        <variable
            name="studentCoursesViewModel"
            type="xyz.penpencil.competishun.ui.viewmodel.StudentCoursesViewModel" />
        <variable
            name="coursesViewModel"
            type="xyz.penpencil.competishun.ui.viewmodel.CoursesViewModel" />

        <variable
            name="coursesCategoryViewModel"
            type="xyz.penpencil.competishun.ui.viewmodel.CoursesCategoryViewModel" />
    </data>


        <androidx.constraintlayout.widget.ConstraintLayout

