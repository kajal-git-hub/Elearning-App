<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/Drawer_layout"
    android:background="@color/white">

    <!-- Top Component Header -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ll_topComponent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- First ImageView (Company Image) -->
        <ImageView
            android:id="@+id/img_company"
            android:layout_width="219dp"
            android:layout_height="50dp"
            android:layout_marginStart="@dimen/_10dp"
            android:src="@drawable/svg_logo_competishun_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="Company Logo" />

        <!-- Second ImageView (Close Button) -->
        <ImageView
            android:id="@+id/ig_close"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:src="@drawable/cross"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="Close Button" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Share section (add other components here if needed) -->

</androidx.constraintlayout.widget.ConstraintLayout>
