<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clCourseCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:paddingBottom="@dimen/_10dp"
    android:layout_marginEnd="@dimen/_16dp"
    android:background="@drawable/card_bg"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/tvViewAll">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_percentOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/frame_370005011__1_"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvDiscount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="12dp"
            android:text="11% OFF"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            app:fontFamily="@font/nunito"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvRecommendedCourseName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/nunito"
        android:maxLines="2"
        android:text="Prakhar Integrated (Fast \nLane-2) 2024-25"
        android:textColor="#2B2829"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tvTarget"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/recommendedClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/card_bg"
        android:padding="6dp"
        android:text="12th Class"
        android:textColor="#5A5555"
        android:textSize="12sp"
        app:fontFamily="@font/nunito"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvRecommendedCourseName" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvTag2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/card_bg"
        android:padding="6dp"
        android:text="Full-Year"
        android:textColor="#5A5555"
        android:textSize="12sp"
        app:fontFamily="@font/nunito"
        app:layout_constraintStart_toEndOf="@id/recommendedClass"
        app:layout_constraintTop_toBottomOf="@id/tvRecommendedCourseName" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvTarget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/card_bg"
        android:padding="6dp"
        android:text="Target 2025"
        android:textColor="#5A5555"
        android:textSize="12sp"
        app:fontFamily="@font/nunito"
        app:layout_constraintStart_toEndOf="@id/tvTag2"
        app:layout_constraintTop_toBottomOf="@id/tvRecommendedCourseName" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvStartDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="17dp"
        android:drawableStart="@drawable/clock"
        android:drawablePadding="6dp"
        android:fontFamily="@font/nunito"
        android:text="Starts On: 01 Jul, 24"
        android:textColor="#726C6C"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recommendedClass" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvEndDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:drawableStart="@drawable/clock"
        android:drawablePadding="6dp"
        android:fontFamily="@font/nunito"
        android:text="Expiry Date: 31 Jul, 24"
        android:textColor="#726C6C"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvStartDate" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvLectureNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:drawableStart="@drawable/video_play__1_"
        android:drawablePadding="6dp"
        android:fontFamily="@font/nunito"
        android:text="Lectures: 56"
        android:textColor="#726C6C"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvEndDate" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvQuizTests"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:drawableStart="@drawable/document_normal"
        android:drawablePadding="6dp"
        android:fontFamily="@font/nunito"
        android:text="Quiz &amp; Tests: 120"
        android:textColor="#726C6C"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvLectureNo" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clPriceDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/frame_1353"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvQuizTests">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/dicountPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="12dp"
            android:layout_marginStart="16dp"
            android:text="₹29,900"
            android:textColor="#FF7A28"
            android:textSize="20sp"
            android:textStyle="bold"
            app:fontFamily="@font/nunito"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/orgPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="12dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="16dp"
            android:text="₹29,900"
            android:textColor="#726C6C"
            android:textSize="12sp"
            android:textStyle="bold"
            app:fontFamily="@font/nunito"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/dicountPrice"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginVertical="12dp"
            android:background="#726C6C"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/orgPrice"
            app:layout_constraintStart_toStartOf="@id/orgPrice"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/rectangle_1072"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/recemmended_banner"
            android:layout_width="108dp"
            android:layout_height="154dp"
            android:paddingLeft="11dp"
            android:paddingTop="29dp"
            android:paddingRight="7dp"
            android:src="@drawable/tech_image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>