<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.WelcomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="47dp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/etSkipText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skip"
            android:lineHeight="19.6dp"
            android:textSize="14dp"
            android:fontFamily="@font/nunito"
            android:textColor="#433E3F"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/etCenterImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:src="@drawable/testseries_image"
            app:layout_constraintTop_toBottomOf="@+id/etSkipText"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etCenterImage">

            <TextView
                android:id="@+id/etTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comprehensive Test \nSeries"
                android:lineHeight="31.2dp"
                android:textSize="24dp"
                android:textColor="#2B2829"
                android:fontFamily="@font/nunito"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/etTitleDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Elevate your prep with realistic tests; practice and receive detailed solutions and feedback."
                android:lineHeight="31.2dp"
                android:textSize="14dp"
                android:layout_marginTop="16dp"
                android:textColor="#726C6C"
                android:fontFamily="@font/nunito"
                app:layout_constraintTop_toBottomOf="@+id/etTitleText"
                app:layout_constraintStart_toStartOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/im_imageButton"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:src="@drawable/testseries_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>