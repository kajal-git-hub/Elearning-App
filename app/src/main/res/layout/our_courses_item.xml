<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clFYCourse"
    android:layout_width="@dimen/_160dp"
    android:layout_height="90dp"
    android:layout_marginTop="@dimen/_16dp"
    android:clickable="true"
    android:layout_marginEnd="@dimen/_20dp"
    android:focusableInTouchMode="true"
    android:contextClickable="true"
    android:background="@drawable/frame_1707480071"
    android:focusable="true"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvCourseName"
        android:layout_width="@dimen/_85dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:text="@string/full_year_courses"
        android:textColor="@color/_0a0a0b"
        android:textSize="@dimen/_14sp"
        app:fontFamily="@font/nunito"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/fullYearCourseImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/_8dp"
        android:src="@drawable/courseimages_bg"
        app:layout_constraintBottom_toBottomOf="@+id/clFYCourse"
        app:layout_constraintEnd_toEndOf="@+id/clFYCourse"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tvCourseName" />
</androidx.constraintlayout.widget.ConstraintLayout>

