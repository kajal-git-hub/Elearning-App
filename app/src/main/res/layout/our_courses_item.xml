<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clFYCourse"
    android:layout_width="160dp"
    android:layout_height="108dp"
    android:layout_marginTop="16dp"
    android:clickable="true"
    android:layout_marginEnd="20dp"
    android:focusableInTouchMode="true"
    android:contextClickable="true"
    android:background="@drawable/frame_1707480071"
    android:focusable="true"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvCourseName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full - Year \nCourses"
        android:textColor="#0A0A0B"
        android:textSize="14sp"
        app:fontFamily="@font/nunito"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/fullYearCourseImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/courseimages_bg"
        app:layout_constraintStart_toEndOf="@+id/tvCourseName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>

