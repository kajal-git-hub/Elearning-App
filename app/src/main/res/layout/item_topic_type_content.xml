<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_10dp"
    android:background="@drawable/card_bg">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_course_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_16dp"
        android:layout_marginStart="12dp"
        android:background="@drawable/frame_17074809189"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/iv_subject_book_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/group_1707478994"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="@dimen/_20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/iv_play_video_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/play_video_icon"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="@dimen/_20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_lecture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lecture"
        android:textColor="#726C6C"
        android:layout_marginTop="14dp"
        android:layout_marginStart="@dimen/_16dp"
        android:fontFamily="@font/nunito"
        android:textStyle="bold"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@id/cl_course_book"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/iv_vertical_line"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="18dp"
        android:layout_marginStart="@dimen/_6dp"
        app:layout_constraintStart_toEndOf="@id/tv_lecture"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/vector_verticle_line"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_lecturer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alok Srivastava"
        android:drawablePadding="@dimen/_4dp"
        android:textColor="#726C6C"
        android:layout_marginTop="14dp"
        android:layout_marginStart="@dimen/_6dp"
        android:fontFamily="@font/nunito"
        android:textStyle="bold"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@id/iv_vertical_line"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_topic_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Introduction to Basic Maths"
        android:layout_marginStart="@dimen/_16dp"
        android:textColor="#2B2829"
        android:layout_marginTop="@dimen/_6dp"
        android:fontFamily="@font/nunito"
        android:textStyle="bold"
        android:textSize="@dimen/_14sp"
        app:layout_constraintStart_toEndOf="@id/cl_course_book"
        app:layout_constraintTop_toBottomOf="@id/tv_lecture"/>

    <com.student.competishun.utils.ExpandableTextView
        android:id="@+id/tv_topic_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:lineHeight="@dimen/_18sp"
        android:text="Topics covered: types of relations \nand functions Inverse trigonometric functions"
        android:textColor="#726C6C"
        android:layout_marginTop="@dimen/_6dp"
        android:fontFamily="@font/nunito"
        android:textStyle="bold"
        android:textSize="@dimen/_12sp"
        app:layout_constraintEnd_toEndOf="@id/tv_topic_name"
        app:layout_constraintStart_toStartOf="@id/tv_topic_name"
        app:layout_constraintTop_toBottomOf="@id/tv_topic_name"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="18dp"
        android:src="@drawable/three_dot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ProgressBar
        android:id="@+id/progress_bar_topic_type_fragment"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:max="100"
        android:progress="50"
        android:layout_marginHorizontal="3dp"
        android:layout_marginBottom="@dimen/_1dp"
        android:progressDrawable="@drawable/progress_bar_topic_type_fragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>