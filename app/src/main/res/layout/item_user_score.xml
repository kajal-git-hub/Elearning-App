<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageUser"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/loaderscreen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tvYouLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="You"
        android:fontFamily="@font/nunito"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageUser"
        app:layout_constraintStart_toStartOf="@id/imageUser"
        app:layout_constraintTop_toBottomOf="@id/imageUser" />

    <TextView
        android:id="@+id/tvYouSubLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/nunito"
        android:text="(Live Test)"
        android:textColor="#898384"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/tvYouLabel"
        app:layout_constraintStart_toStartOf="@id/tvYouLabel"
        app:layout_constraintTop_toBottomOf="@id/tvYouLabel" />


    <TextView
        android:id="@+id/tvScore"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginTop="@dimen/_40dp"
        android:background="@drawable/score_background"
        android:fontFamily="@font/nunito"
        android:gravity="center"
        android:padding="6dp"
        android:text="161"
        android:textColor="@color/_2b2829"
        android:textSize="@dimen/_12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvYouSubLabel" />

    <TextView
        android:id="@+id/tvCorrectAns"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/score_background"
        android:fontFamily="@font/nunito"
        android:gravity="center"
        android:padding="6dp"
        android:text="161"
        android:textColor="@color/_2b2829"
        android:textSize="@dimen/_12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvScore" />

    <TextView
        android:id="@+id/tvIncorrectAns"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/score_background"
        android:fontFamily="@font/nunito"
        android:gravity="center"
        android:padding="6dp"
        android:text="161"
        android:textColor="@color/_2b2829"
        android:textSize="@dimen/_12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCorrectAns" />

    <TextView
        android:id="@+id/tvSkippedAns"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/score_background"
        android:fontFamily="@font/nunito"
        android:gravity="center"
        android:padding="6dp"
        android:text="161"
        android:textColor="@color/_2b2829"
        android:textSize="@dimen/_12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvIncorrectAns" />

    <TextView
        android:id="@+id/tvTimeTakenAns"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/score_background"
        android:fontFamily="@font/nunito"
        android:gravity="center"
        android:padding="6dp"
        android:text="161"
        android:textColor="@color/_2b2829"
        android:textSize="@dimen/_12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSkippedAns" />

</androidx.constraintlayout.widget.ConstraintLayout>