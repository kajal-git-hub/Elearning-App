<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="180dp"
    android:layout_height="128dp"
    android:id="@+id/course_item_rv"
    android:backgroundTint="#FDFAF7"
    android:layout_marginEnd="10dp"
    android:background="@drawable/courseitem_bg"
    android:paddingStart="12dp"
    android:paddingTop="12dp"
    >

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textViewTitle"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:text="Question Papers with Detailed Solution"
        android:textColor="#0A0A0B"
        android:textSize="12sp"
        android:fontFamily="@font/nunito"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imBottomImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/group_1272628766"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
