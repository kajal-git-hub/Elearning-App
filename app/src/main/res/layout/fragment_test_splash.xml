<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/_white_F6F6FF"
    tools:context=".ui.fragment.test.TestSplashFragment">

 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:background="@drawable/test_detail_bg">
     <com.google.android.material.textview.MaterialTextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:fontFamily="@font/nunito"
         android:visibility="gone"
         android:layout_centerInParent="true"
         android:textSize="28sp"
         android:gravity="center"
         android:text="Submitting your test..."
         android:id="@+id/message"/>

     <ImageView
         android:layout_width="120dp"
         android:layout_height="120dp"
         android:layout_centerInParent="true"
         android:layout_marginTop="@dimen/_20dp"
         android:layout_below="@+id/message"
         android:id="@+id/loader"/>

     <com.google.android.material.textview.MaterialTextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:fontFamily="@font/nunito"
         android:layout_centerInParent="true"
         android:textSize="28sp"
         android:gravity="center"
         android:layout_below="@+id/loader"
         android:layout_marginTop="@dimen/_20dp"
         android:text="Best Of Luck!"
         app:fontFamily="@font/nunito"
         android:textStyle="bold"
         android:id="@+id/message1"/>
 </RelativeLayout>

</RelativeLayout>